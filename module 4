using System;

namespace DivisionApp
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Enter the first number: ");
            string input1 = Console.ReadLine();

            Console.Write("Enter the second number: ");
            string input2 = Console.ReadLine();

            DivideAndPrintResult(input1, input2);

            // Uncomment the following lines to see how unhandled exceptions terminate the program:
            // int a = Convert.ToInt32(input1);
            // int b = Convert.ToInt32(input2);
            // Console.WriteLine($"Result (no try-catch): {a / b}");
        }

        static void DivideAndPrintResult(string strNum1, string strNum2)
        {
            try
            {
                int num1 = Convert.ToInt32(strNum1);
                int num2 = Convert.ToInt32(strNum2);
                int result = Divide(num1, num2);
                Console.WriteLine($"Result: {result}");
            }
            catch (FormatException fe)
            {
                Console.WriteLine($"Input format error: {fe.Message}");
            }
            catch (DivideByZeroException dbze)
            {
                Console.WriteLine($"Division error: {dbze.Message}");
            }
            catch (OverflowException oe)
            {
                Console.WriteLine($"Overflow error: {oe.Message}");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Unexpected error: {ex.Message}");
            }
        }

        static int Divide(int a, int b)
        {
            return a / b;
        }
    }
}